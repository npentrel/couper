{
	"manifest_version": 2,

	"name": "Couper",
	"description": "An extension for getting the best online voucher codes.",

	"version": "1.0",

	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": [
			"http://*/*",
			"https://*/*"
		],
			"js": ["content.js"]
		}
	],
	
	"background": {
		"scripts": ["background.js"]
	},


	"permissions": [
		"activeTab", 
		"<all_urls>",
		"tabs",
		"webNavigation"
	]
}