{
  "name": "Couper",
  "version": "1.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "description": "The best online voucher codes!",
  "browser_action": {
    "default_icon": {
      "19": "img/logo.png",
      "38": "img/logo.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/logo.png",
    "128": "img/logo.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  
  "content_scripts": [
  	{
  		"matches": ["<all_urls>"],
  		"js": ["js/insert.js"]
  	}
  ],
  		
  
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}
